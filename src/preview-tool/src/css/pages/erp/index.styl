.home-preview-topbar {
    background: #e6be99;
    position: fixed;
    top: 0;
    left:0;
    right: 0;
    z-index: 9;
    overflow: visible;
    opacity: 0.95;
}
.inner-home-preview-topbar {
    width: 100%;
    height: 50px;
    margin-left: auto;
    margin-right: auto;
    zoom: 1;
}
.home-preview-topbar-left-actions {
    float: left;
    width: 500px;
    text-align: left;
    padding-top: 10px;
}
.home-preview-topbar-right-actions {
    float: right;
    width: 400px;
    text-align: right;
    padding-top: 10px;
}
.home-preview-topbar-right-actions .btn {
    margin-right: 15px;
}
.home-preview-topbar-left-actions .btn {
    margin-left: 15px;
}
.home-preview-topbar-title {
    font-size: 18px;
    margin-left: 10px;
    color: #fff;
    text-shadow: 1px 1px 3px #999;
    vertical-align: -4px;
}
#preview {
    border: none;
}

.btn {
    padding: 0 16px;
    font-size: 12px;
    line-height: 28px;
    color: #d6b59b;
    background-color: #fff;
    cursor: pointer;
    text-align: center;
    display: inline-block;
}
.btn-primary {
    color: #666;
    background-color: #fff;
    border: 1px solid #eaeaea;
}
.btn-primary:hover {
    border-color: #fff;
    background-color: #d6b59b;
    color: #fff;
}

