/* 分类选择组件 */
.category-selector {
    .ant-menu-root.ant-menu-vertical {
        padding: 0;
        border-radius: 6px;
        border: 1px solid #e9e9e9 !important;

        .ant-menu-submenu-title {
            line-height: 28px;
            height: 28px;
        }
        .ant-menu-item {
            line-height: 28px;
            height: 28px;
        }
    }
}

.upload-pannel {
    height: 150px;
}

.uploadbox-form-horizontal label, .uploadbox-form-inline label {
    padding-top: 7px;
    padding-bottom: 7px;
}
.uploadbox-form-item > label {
    color: #666666;
    text-align: right;
    vertical-align: middle;
}

/* 图片上传组件 */
.picture-uploader-pictures {
    margin-top: 10px;
    li {
        position: relative;
        height: 75px;
        max-width:150px;
        overflow:hidden;
        border:1px solid #eee;
        float: left;
        margin-right: 10px;
        margin-bottom: 10px;
        img {
            max-height: 75px;
            height:100%;
        }
        .picture-uploader-del-btn {
            display: none;
            position: absolute;
            right: 0;
            top: 0;
            width:20px;
            height:20px;
            background: red;
            text-align: center;
            cursor: pointer;
            .anticon {
                color: #fff;
                width: 20px;
                height: 20px;
                line-height: 20px;
            }
        }
    }
    li:hover {
        .picture-uploader-del-btn {
            display: block;
        }
    }
}




